<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="icon-red.svg" type="image/svg+xml">
    <title>Buscar Aluno - TECHERS</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --bs-primary: #6a1b9a;       /* Primary purple */
            --bs-primary-dark: #4a126b;  /* Darker purple for hover */
            --bs-secondary: #000000;     /* Black */
            --bs-light-bg: rgba(106, 27, 154, 0.1); /* Light purple background */
        }

        /* Navigation */
        .navbar {
            background-color: var(--bs-primary) !important;
            border-bottom: 3px solid var(--bs-secondary);
        }
        .navbar-brand, .nav-link {
            color: white !important;
            font-weight: 500;
        }

        /* Card Styling */
        .enrollment-card {
            border: 2px solid var(--bs-primary);
            border-radius: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .enrollment-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
        }

        /* Typography */
        .card-title {
            color: var(--bs-primary);
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-bottom: 3px solid var(--bs-primary);
            padding-bottom: 1rem;
            margin-bottom: 1.5rem;
        }
        .form-label {
            font-weight: 600;
            color: var(--bs-secondary);
            margin-bottom: 0.75rem;
        }

        /* Form Elements */
        .btn-primary {
            background-color: var(--bs-primary);
            border: none;
            padding: 0.75rem 2rem;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background-color: var(--bs-primary-dark);
            transform: translateY(-1px);
        }
        .form-control {
            padding: 0.75rem 1rem;
            border: 1px solid #ced4da;
        }
        .form-control:focus {
            border-color: var(--bs-primary);
            box-shadow: 0 0 0 0.25rem rgba(106, 27, 154, 0.25);
        }
        .input-group:focus-within {
            box-shadow: 0 0 0 0.25rem rgba(106, 27, 154, 0.25);
        }

        /* Feedback Elements */
        .alert-danger {
            background-color: var(--bs-light-bg);
            border-color: var(--bs-primary);
            color: var(--bs-secondary);
        }
        .invalid-feedback {
            color: #dc3545;
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <%- include('includes/navbarpais') %>
    
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card enrollment-card shadow-lg p-3">
                    <div class="card-body px-4">
                        <h3 class="card-title text-center">Rematr√≠cula 2026</h3>
                        <form action="/" method="post" class="needs-validation" novalidate>
                            <div class="mb-4">
                                <label for="aluno" class="form-label">Nome do Aluno TECHERS</label>
                                <div class="input-group has-validation">
                                    <input type="text" 
                                           class="form-control" 
                                           name="nome_aluno" 
                                           id="aluno" 
                                           placeholder="Digite o nome completo do aluno"
                                           aria-label="Nome do aluno" 
                                           required>
                                    <button type="submit" class="btn btn-primary rounded-end">
                                        Buscar
                                    </button>
                                    <div class="invalid-feedback">
                                        Por favor, insira o nome do aluno.
                                    </div>
                                </div>
                            </div>
                            
                            <% if (messages && messages.length > 0) { %>
                                <div class="alert alert-danger text-center mt-4">
                                    <% messages.forEach(function(message) { %>
                                        <p class="mb-0 fw-medium"><%= message %></p>
                                    <% }); %>
                                </div>
                            <% } %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Enhanced form validation
        document.addEventListener('DOMContentLoaded', () => {
            const forms = document.querySelectorAll('.needs-validation');
            
            forms.forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
                
                // Add input validation on blur
                form.querySelectorAll('input').forEach(input => {
                    input.addEventListener('blur', () => {
                        if (input.value.trim() === '' && input.required) {
                            input.classList.add('is-invalid');
                        } else {
                            input.classList.remove('is-invalid');
                        }
                    });
                });
            });
        });
    </script>
</body>
</html>